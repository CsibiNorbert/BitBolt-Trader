    {
        // Stop chart timer
        _chartUpdateTimer?.Dispose();
        
        // Dispose SignalR connection
        if (hubConnection != null)
        {
            await hubConnection.DisposeAsync();
        }
        
        // Only call JavaScript if it's safe to do so
        if (_jsAvailable && _isRendered)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("minimalTradingDashboard.dispose");
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Failed to dispose JavaScript components");
            }
        }
    }
    
